<!doctype html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sửa tin tức</title>
    <%- include('../partials/head') %>
</head>
<body>
    <!--sidebar start-->
    <%- include('../partials/sidebar') %>
    <!-- sidebar end -->

    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <div class="table-agile-info">
                <h3>Cập nhật thông tin sản phẩm</h3>
                <div class="panel-body">
                    <div class="position-center">
                        <form action="/edit_news_save" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <input type="hidden" class="form-control" name="newsId" value="<%= danhsach._id %>">
                                <label >Tiêu đề</label>
                                <input type="text" class="form-control" name="newsTitle" value="<%= danhsach.newsTitle %>" required="">
                            </div>

                            <div class="form-group">
                                <label >Hình ảnh sản phẩm</label>
                                <input type="file" name="productImage">
                                <img src="/images/<%= danhsach.productImage %>" height="100" width="100" alt="">
                            </div>

                            <div class="form-group">
                                <label >Nội dung</label>
                                <textarea id="editor" class="form-control" name="newsContent" required=""><%- danhsach.newsContent %></textarea>
                            </div>
        
                            <div class="form-group">
                                <label >Trạng thái</label>
                                <select name="newsStatus" class="form-control m-bot15">
                                    <% if(danhsach.newsStatus == 0){ %>
                                        <option selected value="0">Mới</option>
                                        <option value="1">Cũ</option>
                                        <option value="2">Ẩn</option>
                                    <% }else if(danhsach.newsStatus == 1){ %>
                                        <option selected value="1">Cũ</option>
                                        <option value="0">Mới</option>
                                        <option value="2">Ẩn</option>
                                    <% }else if(danhsach.newsStatus == 2){ %>
                                        <option selected value="2">Ẩn</option>
                                        <option value="0">Mới</option>
                                        <option value="1">Cũ</option>
                                    <% } %>
                                </select>
                            </div>

                            <a href="/admin_news"><button type="button" class="btn btn-info" ><i class="fa-solid fa-arrow-left-long"></i> Quay lại</button></a>
                            <button type="submit" class="btn btn-success" name="add_product">Sửa</button>
                        </form>
                    </div>
        
                </div>
            </div>
        </section>
    <!--main content end-->

</section>
    <%- include('../partials/footer') %>
</body>
</html>

