<!doctype html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Đơn hàng chưa xác nhận</title>
    <%- include('../partials/head') %>
</head>
<body>
    <!--sidebar start-->
    <%- include('../partials/sidebar') %>
    <!-- sidebar end -->

    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <div class="table-agile-info">
                <div class="table-heading">
                    <div class="row">
                        <div class="headerr">
                            <h3>Đơn hàng chưa xác nhận</h3>
                        </div>
                        <div class="body">
                            <div class="order-status" style="text-align: right; margin-right: 15px;">
                                <a href="/new_orders_today" class="btn btn-orderToday">Đơn mới ngày hôm nay</a>
                                <a href="/all_orders" class="btn btn-primary">Tổng đơn hàng</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <% if(order==0){ %>
                        <div class="empty-table">
                            <img src="/images/empty-order.jpg" alt="" width="250" height="250">
                            <p>Không có đơn hàng mới nào</p>
                        </div>
                    <%}else{%>
                    <div class="table-responsive">
                        <table id="myTable" class="table table-striped table-bordered">
                            <thead>
                            <tr>
                                <th style="text-align: center;width: 45px;">STT</th>
                                <th style="text-align: center;width: 150px;" data-orderable="false">Mã đơn</th>
                                <th style="width: 145px; text-align: center;" data-orderable="false">Người nhận</th>
                                <th style="text-align: center;width: 90px;" data-orderable="false">SĐT</th>
                                <th style="text-align: center;" data-orderable="false">Tổng tiền</th>
                                <th style="text-align: center;" data-orderable="false">Ngày đặt</th>
                                <th style="text-align: center;" data-orderable="false">Trạng thái</th>
                                <th style="text-align: center;" data-orderable="false">Tuỳ biến</th>
                                <th style="text-align: center;" data-orderable="false">Chi tiết</th>
                            </tr>
                            </thead>
                            <tbody>
                                <% for(let i=0; i < danhsach.length; i++) { %>
                                <tr>
                                    <td style="text-align: center;"><%= i+1 %></td>
                                    <td style="text-align: center;"><%= danhsach[i].orderCode %></td>
                                    <td style="text-align: center;"><%= danhsach[i].shippingName %></td>
                                    <td style="text-align: center;"><%= danhsach[i].shippingPhone %></td>
                                    <td style="text-align: center;"><%= VND.format(danhsach[i].total) %></td>
                                    <td style="text-align: center;"><%= danhsach[i].timeIn %></td>
                                    <td style="text-align: center; color: #fbc216; font-weight: 600;">Đang chờ xác nhận</td>
                                    <td>
                                        <form action="/update_status/<%= danhsach[i].orderCode %>" method="post">
                                            <button class="btn btn-success" style="width: 80px;"><b>Xác nhận</b></button>
                                        </form>
                                    </td>
                                    <td style="text-align: center;">
                                        <a class="btn btn-primary" style="text-align: center;" href="/order_detail/<%= danhsach[i].orderCode %>">
                                            Xem chi tiết
                                        </a>
                                    </td>
                                </tr>
                                <%}%>
                            </tbody>
                        </table>
                    </div>
                    <%}%>
                </div>
            </div>
        </section>
    <!--main content end-->

</section>
    <%- include('../partials/footer') %>
</body>
</html>

