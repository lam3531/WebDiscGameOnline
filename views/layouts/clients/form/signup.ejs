<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.3.js" integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="css/app.css">
    <link rel="stylesheet" href="css/alert.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-kQtW33rZJAHjgefvhyyzcGF3C5TFyBQBA13V1RKPf4uH+bwyzQxZ6CmMZHmNBEfJ" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lightslider/1.1.6/css/lightslider.css" integrity="sha512-+1GzNJIJQ0SwHimHEEDQ0jbyQuglxEdmQmKsu8KI7QkMPAnyDrL9TAnVyLPEttcTxlnLVzaQgxv2FpLCLtli0A==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
</head>
<body>
    <%- include('../partials/header') %>
    
    <div class="container">
        <div class="my-signup">
            <form action="./save" method="post">
                <h3>Đăng ký tài khoản</h3>
                <div class="row">
                    <div class="col">
                        <div class="spann" style="display: flex;">
                            <span>Họ và tên </span>
                            <%if(nameError.length > 0){%><p style="font-size: 14px; font-weight:600; color: red; margin: 12.5px 0px 0px 5px;"><%= nameError %></p><%}%>
                        </div>
                        <input type="text" name="fullname" class="box" placeholder="Nhập họ tên đầy đủ của bạn" value="<%= nameED %>">
                        
                        <div class="span" style="display: flex;">
                            <span>Số điện thoại </span>
                            <%if(mobileError.length > 0){%><p style="font-size: 14px;font-weight:600; color: red; margin: 12.5px 0px 0px 5px;"><%= mobileError %></p><%}%>
                            <%if(errorPhone.length > 0){%><p style="font-size: 14px; font-weight:600;color: red; margin: 12.5px 0px 0px 5px;"><%= errorPhone %></p><%}%>
                        </div>
                        <input type="text" name="phone" class="box" placeholder="Nhập số điện thoại của bạn" value="<%= mobileED %>">
                        
                        <div class="span" style="display: flex;">
                            <span>Tên đăng nhập: </span>
                            <%if(usernameError.length > 0){%><p style="font-size: 14px; font-weight:600; color: red; margin: 12.5px 0px 0px 5px;"><%= usernameError %></p><%}%>
                            <%if(errorUsername.length > 0){%><p style="font-size: 14px; font-weight:600; color: red; margin: 12.5px 0px 0px 5px;"><%= errorUsername %></p><%}%>
                        </div>
                        <input type="text" name="username" class="box" placeholder="Nhập tên đăng nhập của bạn" value="<%= usernameED %>">
                    </div>
    
                    <div class="col pwd" style="position: relative;">
                        <div class="span" style="display: flex;">
                            <span>Email của bạn</span>
                            <%if(emailError.length > 0){%><p style="font-size: 14px; font-weight:600; color: red; margin: 12.5px 0px 0px 5px;"><%= emailError %></p><%}%>
                            <%if(errorEmail.length > 0){%><p style="font-size: 14px; font-weight:600; color: red; margin: 12.5px 0px 0px 5px;"><%= errorEmail %></p><%}%>
                        </div>
                        <input type="text" name="email" class="box" placeholder="Nhập email của bạn" value="<%= emailED %>">
                        
                        <div class="span" style="display: flex;">
                            <span>Mật khẩu</span>
                            <%if(passwordError.length > 0){%><p style="font-size: 14px; font-weight:600; color: red; margin: 12.5px 0px 0px 5px;"><%= passwordError %></p><%}%>
                        </div>
                        <input type="password" name="password" class="box box-input" placeholder="Nhập mật khẩu" value="<%= passwordED %>">
                        <i class="fa-regular fa-eye-slash eyes eye-close"></i>
                        <i class="fa-regular fa-eye eyes eye-open hidden"></i>

                        <div class="span" style="display: flex;">
                            <span>Xác nhận mật khẩu</span>
                        </div>
                        <input type="password" name="password2" class="box box-inputt" placeholder="Nhập xác nhận mật khẩu" value="<%= password2ED %>">
                        <i class="fa-regular fa-eye-slash eyess eyee-close"></i>
                        <i class="fa-regular fa-eye eyess eyee-open hidden"></i>
                    </div>
    
                    <div class="checkbox">
                        <input type="checkbox" name="checkbox" id="remember-me">
                        <label for="remember-me">Đồng ý với Điều khoản dịch vụ của Gaming Shop</label>
                        <%if(boxError.length > 0){%><p style="font-size: 14px;color: red; font-weight:600; margin: 0px 0px 0px 5px;"><%= boxError %></p><%}%>
                    </div>
                    <input type="submit" value="Đăng ký" class="btn">
                </div>
            </form>
        </div>
    </div>
    
     <%- include('../partials/footer') %>
</body>

<script type="text/javascript">
    const input = document.querySelector(".box-input");
    const eyeOpen = document.querySelector(".eye-open");
    const eyeClose = document.querySelector(".eye-close");

    const inputt = document.querySelector(".box-inputt");
    const eyeeOpen = document.querySelector(".eyee-open");
    const eyeeClose = document.querySelector(".eyee-close");

    eyeOpen.addEventListener("click", function(){
        eyeOpen.classList.add("hidden");
        eyeClose.classList.remove("hidden");
        input.setAttribute("type","password");
    })

    eyeClose.addEventListener("click", function(){
        eyeOpen.classList.remove("hidden");
        eyeClose.classList.add("hidden");
        input.setAttribute("type","text");
    })

    eyeeOpen.addEventListener("click", function(){
        eyeeOpen.classList.add("hidden");
        eyeeClose.classList.remove("hidden");
        inputt.setAttribute("type","password");
    })

    eyeeClose.addEventListener("click", function(){
        eyeeOpen.classList.remove("hidden");
        eyeeClose.classList.add("hidden");
        inputt.setAttribute("type","text");
    })

</script>
</html>